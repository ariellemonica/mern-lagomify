{
  "name": "mern-lagomify",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "lint": "eslint . && cd client && npm run lint",
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "eslintConfig": {
    "extends": [
      "semistandard"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ariellemonica/mern-lagomify.git"
  },
  "author": "Monica Nadal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ariellemonica/mern-lagomify/issues"
  },
  "homepage": "https://github.com/ariellemonica/mern-lagomify#readme",
  "dependencies": {
    "aws-sdk": "^2.713.0",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.9.22",
    "multer": "^1.4.2",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-semistandard": "^15.0.1",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^2.0.4"
  }
}
